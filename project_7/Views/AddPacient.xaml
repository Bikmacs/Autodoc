<Page x:Class="project_7.Views.AddPacient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:project_7.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddPacient">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <Label Content="Форма добавления пациента" Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" FontWeight="Bold" Margin="10"/>

        <Label Content="Имя" Grid.Row="1" Grid.Column="0"/>
        <TextBox x:Name="AddName" Text="{Binding AddPacient.Name}" Grid.Row="1" Grid.Column="1"/>

        <Label Content="Фамилия" Grid.Row="2" Grid.Column="0"/>
        <TextBox x:Name="AddLastName" Text="{Binding AddPacient.LastName}" Grid.Row="2" Grid.Column="1"/>

        <Label Content="Отчество" Grid.Row="3" Grid.Column="0"/>
        <TextBox x:Name="AddMiddleName" Text="{Binding AddPacient.MiddleName}" Grid.Row="3" Grid.Column="1"/>

        <Label Content="День Рождения" Grid.Row="4" Grid.Column="0"/>
        <DatePicker SelectedDate="{Binding AddPacient.Birthday, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
            Grid.Row="4" VerticalAlignment="Center" Grid.Column="1"/>

        <Label Content="Номер телефона" Grid.Row="5" Grid.Column="0"/>
        <TextBox Text="{Binding AddPacient.PhoneNumber}" Grid.Row="5" Grid.Column="1"/>


        <Button Content="Добавить пациента" Grid.Row="6" Margin="5" Grid.Column="0" Width="200" Height="25" Command="{Binding AddPacientViewCommand}" Grid.ColumnSpan="2" HorizontalAlignment="Center"/>

        <Button Content="Назад" Height="30" Grid.Row="6" HorizontalAlignment="Left" Margin="5" Command="{Binding Back}"/>

    </Grid>
</Page>
