<Page x:Class="project_7.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:project_7.Views"
      mc:Ignorable="d" 
      d:DesignHeight="270" d:DesignWidth="400"
      Title="LoginPage">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="210"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>
        
        <Label Content="Авторизация" Grid.ColumnSpan="2" FontWeight="Bold" HorizontalAlignment="Center"/>

        <StackPanel VerticalAlignment="Center">
            <Label Content="Идентификатор"/>
            <Label Content="Пароль"/>
        </StackPanel>

        <StackPanel Grid.Column="1" VerticalAlignment="Center">
            <TextBox Text="{Binding LoginDoctor.Id, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
            <PasswordBox PasswordChanged="PasswordBox_PasswordChanged" Margin="5"/>

        </StackPanel>

        <StackPanel Grid.Row="1" Height="50" Grid.ColumnSpan="2" HorizontalAlignment="Center">
            <Button Width="150" Content="Зарегистрироваться" Click="RegButton_Click" />
            <Button Content="Войти" Click="LoginButton_Click"/>
        </StackPanel>
        
    </Grid>
</Page>
