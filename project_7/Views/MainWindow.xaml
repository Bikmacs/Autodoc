<Window x:Class="project_7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:project_7" 
        mc:Ignorable="d"
        Title="Приём пациентов" Height="520" Width="1100"
        Style="{StaticResource MaterialDesignWindow}"
        
        Background="{DynamicResource WindowBackground}">

    <DockPanel>

        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Настройки">
                <MenuItem Header="Сменить тему" Click="ChangeThemeButton_Click" Foreground="{DynamicResource FontColor}"/>
            </MenuItem>
        </Menu>

        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>

    </DockPanel>
</Window>