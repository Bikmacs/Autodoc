<Page x:Class="project_7.Views.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:project_7.Views"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
      Title="RegPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Label Content="Форма добавления пациента" Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" FontWeight="Bold" Margin="10"/>

        <StackPanel  Grid.Row="1">
            <Label Content="Имя"/>
            <Label Content="Фамилия"/>
            <Label Content="Отчество"/>
            <Label Content="Специализация"/>
            <Label Content="Пароль"/>
            <Label Content="Подтверждение"/>
            <Label Content="Идентификатор"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="1">
            <TextBox Margin="5" Text="{Binding RegisterDoctors.Name}"/>
            <TextBox Margin="5" Text="{Binding RegisterDoctors.LastName}"/>
            <TextBox Margin="5" Text="{Binding RegisterDoctors.MiddleName}"/>
            <TextBox Margin="5" Text="{Binding RegisterDoctors.Specialisation}"/>
            <PasswordBox Margin="5" PasswordBox.PasswordChanged="PasswordBox_PasswordChanged"/>
            <PasswordBox Margin="5" PasswordBox.PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>
            <Label FontSize="14" Content="{Binding RegisterDoctors.Id}"/>
        </StackPanel>

        <StackPanel Grid.Row="2"  Grid.ColumnSpan="2" HorizontalAlignment="Center">
            <Button Width="150" Content="Зарегистрироваться" Click="Button_Register" />
            <Button Content="Войти" Click="Button_Login"/>
        </StackPanel>
    </Grid>
</Page>
