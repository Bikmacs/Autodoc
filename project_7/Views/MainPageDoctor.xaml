<Page x:Class="project_7.Views.MainPageDoctor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:project_7.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainWindowDoctor"
      Background="{DynamicResource WindowBackground}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Style="{StaticResource ButtonStackPanelStyle}"
                    Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Command="{Binding AddPacientCommand}" Content="Создать" Style="{StaticResource AddButton}" Margin="10,0"/>
            <Button Command="{Binding StartReceptionCommand}" Content="Начать приём" Style="{StaticResource StandardButton}" Margin="10,0"/>
            <Button Command="{Binding EditPacientCommand}" Content="Изменить информацию" Style="{StaticResource StandardButton}" Margin="10,0"/>
        </StackPanel>

        <Border BorderBrush="{DynamicResource ButtonBorder}" 
                Style="{StaticResource PageBorderInfo}"

                Grid.Row="1" Grid.Column="0">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                           Text="Информация о текущем пользователе:" 
                           Style="{StaticResource TitleTextBlockStyle}" Margin="0,0,0,10"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Идентификатор:" Style="{StaticResource TextBlockStyles2}" Margin="0,3"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CurrentDoctor.Id}" Style="{StaticResource TextBlockStyles2}" Margin="5,3,0,3"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Фамилия:" Style="{StaticResource TextBlockStyles2}" Margin="0,3"/>
                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding CurrentDoctor.LastName}" Style="{StaticResource TextBlockStyles2}" Margin="5,3,0,3"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Имя:" Style="{StaticResource TextBlockStyles2}" Margin="0,3"/>
                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding CurrentDoctor.Name}" Style="{StaticResource TextBlockStyles2}" Margin="5,3,0,3"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="Отчество:" Style="{StaticResource TextBlockStyles2}" Margin="0,3"/>
                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding CurrentDoctor.MiddleName}" Style="{StaticResource TextBlockStyles2}" Margin="5,3,0,3"/>

                <TextBlock Grid.Row="5" Grid.Column="0" Text="Специализация:" Style="{StaticResource TextBlockStyles2}" Margin="0,3"/>
                <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding CurrentDoctor.Specialisation}" Style="{StaticResource TextBlockStyles2}" Margin="5,3,0,3"/>
            </Grid>
        </Border>

        <ListView Grid.Row="1" Grid.Column="1" Margin="10"
                  ItemsSource="{Binding PacientList, Mode=TwoWay}"
                  SelectedItem="{Binding SelectedPacient, Mode=TwoWay}"
                  MouseDoubleClick="EditItem_Click"
                  Style="{StaticResource ListViewStyle}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Идентификатор: " Style="{StaticResource TextBlockStyle}"/>
                            <TextBlock Text="{Binding Id}" Style="{StaticResource TextBlockStyle}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Имя: " Style="{StaticResource TextBlockStyle}"/>
                            <TextBlock Text="{Binding Name}" Style="{StaticResource TextBlockStyle}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Фамилия: " Style="{StaticResource TextBlockStyle}"/>
                            <TextBlock Text="{Binding LastName}" Style="{StaticResource TextBlockStyle}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Отчество: " Style="{StaticResource TextBlockStyle}"/>
                            <TextBlock Text="{Binding MiddleName}" Style="{StaticResource TextBlockStyle}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="День рождение: " Style="{StaticResource TextBlockStyle}"/>
                            <TextBlock Text="{Binding Birthday, StringFormat='dd.MM.yyyy'}" Style="{StaticResource TextBlockStyle}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Номер телефона:" Style="{StaticResource TextBlockStyle}"/>
                            <TextBlock Text="{Binding PhoneNumber, StringFormat={}{0:### ### ## ##}, Mode=TwoWay}" Style="{StaticResource TextBlockStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

      
    </Grid>
</Page>