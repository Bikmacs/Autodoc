<Page x:Class="project_7.Views.MainPageDoctor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:project_7.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainWindowDoctor"
      Background="{DynamicResource WindowBackground}">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.ColumnSpan="2"  Style="{StaticResource ButtonStackPanelStyle}">

            <Button Command="{Binding AddPacientCommand}" Content="Создать пациента" Style="{StaticResource AddButton}"/>

            <Button Command="{Binding StartReceptionCommand}" Content="Начать приём"  Style="{StaticResource StandardButton}"/>

            <Button Command="{Binding EditPacientCommand}" Content="Изменить информацию"  Style="{StaticResource StandardButton}"/>

        </StackPanel>

        <ListView Grid.Row="1" Grid.Column="1"
            ItemsSource="{Binding PacientList, Mode=TwoWay}"
            SelectedItem="{Binding SelectedPacient, Mode=TwoWay}"
            MouseDoubleClick="EditItem_Click"
            Style="{StaticResource ListViewStyle}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Идентификатор: " Style="{StaticResource TextBlockStyle}"/>
                            <TextBlock Text="{Binding Id}" Style="{StaticResource TextBlockStyle}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Имя: " Style="{StaticResource TextBlockStyle}"/>
                            <TextBlock Text="{Binding Name}" Style="{StaticResource TextBlockStyle}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Фамилия: " Style="{StaticResource TextBlockStyle}"/>
                            <TextBlock Text="{Binding LastName}" Style="{StaticResource TextBlockStyle}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Отчество: " Style="{StaticResource TextBlockStyle}"/>
                            <TextBlock Text="{Binding MiddleName}" Style="{StaticResource TextBlockStyle}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="День рождение: " Style="{StaticResource TextBlockStyle}"/>
                            <TextBlock Text="{Binding Birthday, StringFormat='dd.MM.yyyy'}" Style="{StaticResource TextBlockStyle}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Номер телефона:" Style="{StaticResource TextBlockStyle}"/>
                            <TextBlock Text="{Binding PhoneNumber, StringFormat={}{0:### ### ## ##}, Mode=TwoWay}" Style="{StaticResource TextBlockStyle}"/>
                        </StackPanel>

                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>


        <Border BorderBrush="{DynamicResource ButtonBorder}" 
                Grid.Row="1" Grid.Column="0">

            <StackPanel Style="{StaticResource InfoStackPanelStyle}">
                <TextBlock Text="Информация о текущем пользователе:" Style="{StaticResource TitleTextBlockStyle}"/>
                <TextBlock Text="Идентификатор:" Style="{StaticResource TextBlockStyles2}"/>
                <TextBlock Text="{Binding CurrentDoctor.Id}" Style="{StaticResource TextBlockStyles2}"/>

                <TextBlock Text="Фамилия:" Style="{StaticResource TextBlockStyles2}"/>
                <TextBlock Text="{Binding CurrentDoctor.LastName}" Style="{StaticResource TextBlockStyles2}"/>

                <TextBlock Text="Имя:" Style="{StaticResource TextBlockStyles2}"/>
                <TextBlock Text="{Binding CurrentDoctor.Name}" Style="{StaticResource TextBlockStyles2}"/>

                <TextBlock Text="Отчество:" Style="{StaticResource TextBlockStyles2}"/>
                <TextBlock Text="{Binding CurrentDoctor.MiddleName}" Style="{StaticResource TextBlockStyles2}"/>

                <TextBlock Text="Специализация:" Style="{StaticResource TextBlockStyles2}"/>
                <TextBlock Text="{Binding CurrentDoctor.Specialisation}" Style="{StaticResource TextBlockStyles2}"/>
            </StackPanel>
        </Border>

    </Grid>
</Page>