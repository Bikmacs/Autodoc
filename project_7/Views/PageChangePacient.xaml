<Page x:Class="project_7.Views.PageChangePacient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:project_7.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageChangePacient">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Border Background="White" BorderBrush="Gainsboro" BorderThickness="1">
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Content="Форма изменения информации о клиенте" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" FontWeight="Bold" HorizontalAlignment="Center"/>

                <Label Content="Фамилия" Grid.Row="2" Grid.Column="0"/>
                <TextBox  x:Name="Name" Text="{Binding AddPacient.Name, UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" Grid.Column="2"/>

                <Label Content="Имя" Grid.Row="3" Grid.Column="0"/>
                <TextBox  x:Name="LastName" Text="{Binding AddPacient.LastName, UpdateSourceTrigger=PropertyChanged}" Grid.Row="3" Grid.Column="2"/>

                <Label Content="Отчество" Grid.Row="4" Grid.Column="0"/>
                <TextBox  x:Name="MiddleName" Text="{Binding AddPacient.MiddleName, UpdateSourceTrigger=PropertyChanged}" Grid.Row="4" Grid.Column="2"/>

                <Label Content="День Рождение:" Grid.Row="5" Grid.Column="0"/>
                <DatePicker x:Name="Birthday"  SelectedDate="{Binding AddPacient.Birthday, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  Grid.Row="5" Grid.Column="2"/>

                <Label Content="Номер телефона:" Grid.Row="6" Grid.Column="0"/>
                <TextBox Text="{Binding AddPacient.PhoneNumber}" Grid.Row="6" Grid.Column="1"/>


                <Button Content="Изменить информацию" Grid.Row="7" Grid.Column="1" Click="Button_Change_Patient" Margin="5"/>
                <Button Content="Сбросить" Grid.Row="7" Click="Button_Click_Reset" Margin="5"/>
            </Grid>
        </Border>
    </Grid>
</Page>
