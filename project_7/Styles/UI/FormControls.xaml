 <ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="TextBlock" x:Key="TextBlockStyle">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Width" Value="160"/>
    </Style>

    <Style x:Key="LabelStyle" TargetType="Label">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="FormTextBoxStyle" TargetType="TextBox">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Width" Value="160"/>
    </Style>

    <Style x:Key="FormTextBoxStyle2" TargetType="TextBox">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Width" Value="160"/>
        <Setter Property="Height" Value="20"/>
    </Style>


    <Style x:Key="SmallTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource FormTextBoxStyle}">
        <Setter Property="Width" Value="155"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>
     
    <Style x:Key="LargeTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource FormTextBoxStyle}">
        <Setter Property="Height" Value="52"/>
        <Setter Property="Width" Value="200"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="AcceptsReturn" Value="True"/>
    </Style>

    <Style x:Key="FormPasswordBoxStyle" TargetType="PasswordBox">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Width" Value="160"/>
        <Setter Property="Height" Value="20"/>
    </Style>
     
    <Style x:Key="DatePickerStyle" TargetType="DatePicker">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Width" Value="160" />
    </Style>

    <Style x:Key="TextBlockStyles" TargetType="TextBlock">
        <Setter Property="Margin" Value="2,2,0,0"/>
    </Style>

    <Style x:Key="TextBlockStyles2" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Width" Value="230"/>
    </Style>

    <Style x:Key="TextBlockStyles4" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Width" Value="230"/>
    </Style>


    <Style x:Key="FormTitleTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource TextBlockStyle}">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>
     
     
    <Style x:Key="TitleTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource TextBlockStyle}">
        <Setter Property="Margin" Value="0,0,0,5"/>
        <Setter Property="Width" Value="240"/>
    </Style>

    <Style x:Key="FormTitleLabelStyle" TargetType="Label" BasedOn="{StaticResource LabelStyle}">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="FontWeight" Value="Bold"/>
        
    </Style>

    <Style x:Key="FormGridStyle" TargetType="Grid">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Width" Value="340"/>
        <Setter Property="Height" Value="300"/>
    </Style>

    <Style x:Key="FormGridStyle4" TargetType="Grid">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Width" Value="340"/>
        <Setter Property="Height" Value="200"/>
    </Style>

    <Style x:Key="FormGridStyle2" TargetType="Grid">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Width" Value="500"/>
        <Setter Property="Height" Value="350"/>
    </Style>

    <Style x:Key="FormGridStyle3" TargetType="Grid">
        <Setter Property="Width" Value="330"/>
        <Setter Property="Height" Value="350"/>
    </Style>


    <Style x:Key="FormStackPanelStyle" TargetType="StackPanel">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Width" Value="365"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>

    <Style x:Key="FormStackPanelStyle2" TargetType="StackPanel">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Width" Value="170"/>
    </Style>
    <Style x:Key="ButtonStackPanelStyle" TargetType="StackPanel">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Orientation" Value="Horizontal"/>
    </Style>
    <Style x:Key="LabelStackPanelStyle" TargetType="StackPanel">
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    <Style x:Key="ControlsStackPanelStyle" TargetType="StackPanel">
        <Setter Property="VerticalAlignment" Value="Center"/>

    </Style>
    <Style x:Key="ButtonPanelStyle" TargetType="StackPanel">
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>


    <Style x:Key="ListViewStyle" TargetType="ListView">
        <Setter Property="Margin" Value="10"/>
    </Style>
    <Style x:Key="ScrollViewerStyle" TargetType="ScrollViewer">
        <Setter Property="Margin" Value="3"/>
        <Setter Property="Background" Value="White"/>
    </Style>
    <Style x:Key="InfoStackPanelStyle" TargetType="StackPanel">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Background" Value="White"/>
    </Style>

    <Style x:Key="PageTitleTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="26"/>
    </Style>

    <Style x:Key="PageBorderInfo" TargetType="Border">
        <Setter Property="Margin" Value="10" />
        <Setter Property="Padding" Value="15" />
        <Setter Property="BorderThickness" Value="1"/>
    </Style>


    <Style x:Key="PageBorder" TargetType="Border">
        <Setter Property="Width" Value="340" />
    </Style>

</ResourceDictionary>