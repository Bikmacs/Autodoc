<Window x:Class="project_7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:project_7" xmlns:local1="clr-namespace:project_7.Models"
        mc:Ignorable="d"
        Title="Приём пациентов" Height="800" Width="1000">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="330"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Border Background="White" BorderBrush="Gainsboro" Padding="1" BorderThickness="1" Margin="0,1,13,0">
            <Grid Grid.Row="0" Grid.Column="0" Margin="10,10,10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Content="Регистрация" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
               FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,0"/>

                <Label Content="Имя" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="1" Margin="10,2" Text="{Binding RegisterDoctrors.Name, Mode=TwoWay}"/>

                <Label Content="Фамилия" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox Grid.Row="2" Grid.Column="1" Margin="10,2" Text="{Binding RegisterDoctrors.LastName, Mode=TwoWay}"/>

                <Label Content="Отчество" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox Grid.Row="3" Grid.Column="1" Margin="10,2" Text="{Binding RegisterDoctrors.MiddleName,Mode=TwoWay}"/>

                <Label Content="Специализация" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox Grid.Row="4" Grid.Column="1" Margin="10,2"  Text="{Binding RegisterDoctrors.Specialisation, Mode=TwoWay}"/>

                <Label Content="Пароль" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center"/>
                <PasswordBox Grid.Row="5" Grid.Column="1" Margin="10,2" PasswordBox.PasswordChanged="PasswordBox_PasswordChanged"/>

                <Label Content="Подтверждение пароля" Grid.Row="6" Grid.Column="0" VerticalAlignment="Top"/>
                <PasswordBox Grid.Row="6" Grid.Column="1" Margin="10,2" PasswordBox.PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>

                <Label Content="Идентификатор:" Grid.Row="7" Grid.Column="0" VerticalAlignment="Top" Margin="0,3,0,0" Grid.ColumnSpan="2"/>
                <Label Content="{Binding RegisterDoctrors.Id}" Grid.Row="7" Grid.Column="1" Margin="10,2,10,0" />

                <Button Content="Зарегистрироваться" Grid.Row="8" Height="25" Width="150" HorizontalAlignment="Center" Click="Button_Register" />
            </Grid>
        </Border>

        <Border Background="White" BorderBrush="Gainsboro" Padding="1" BorderThickness="1" Grid.Row="1" Margin="10,20,13,20">
            <Grid Margin="12,0,12,20" Grid.Row="1" VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Content="Авторизация" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
               FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <Label Content="Идентификатор" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="LoginText" Text="{Binding RegisterDoctrors.Id}" Grid.Row="1" Grid.Column="1" Margin="10,2"/>

                <Label Content="Пароль" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
                <PasswordBox x:Name="PasswordText" Grid.Row="2" Grid.Column="1" Margin="10,2"/>

                <Button Content="Войти"
                Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                Margin="64,10,0,-27"
                Width="150"
                HorizontalAlignment="Left" Click="Button_Login"/>
            </Grid>
        </Border>

        <Border Background="White" BorderBrush="Gainsboro" BorderThickness="1" Margin="10,20,13,20" Grid.Row="2">
            <StackPanel Grid.Row="2">
                <TextBlock Text="Информация о текущем пользователе:" FontWeight="Bold"/>

                <TextBlock Text="Идентификатор:" Margin="0,10,0,0"/>
                <TextBlock Text="{Binding RegisterDoctrors.Id}"/>

                <TextBlock Text="Фамилия:"/>
                <TextBlock Text="{Binding RegisterDoctrors.Id}"/>

                <TextBlock Text="Имя:"/>
                <TextBlock Text="{Binding RegisterDoctrors.LastName}"/>

                <TextBlock Text="Отчество:"/>
                <TextBlock Text="{Binding RegisterDoctrors.MiddleName}"/>

                <TextBlock Text="Специализация:"/>
                <TextBlock Text="{Binding RegisterDoctrors.Specialisation}"/>

            </StackPanel>
        </Border>

        <Border Background="White" HorizontalAlignment="Center" BorderBrush="Gainsboro" BorderThickness="1" Grid.Column="2" Margin="0,20,0,0">
            <Grid Grid.Column="2" HorizontalAlignment="Left" Width="292" Height="194" VerticalAlignment="Bottom" Margin="0,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Content="Форма добавления пациента" Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" FontWeight="Bold"/>

                <Label Content="Имя" Grid.Row="1" Grid.Column="0"/>
                <TextBox x:Name="AddName" Text="{Binding AddPatient.Name}" Grid.Row="1" Grid.Column="1" Grid.RowSpan="2" Margin="0,0,10,20"/>

                <Label Content="Фамилия" Grid.Row="2" Grid.Column="0"/>
                <TextBox x:Name="AddLastName" Text="{Binding AddPatient.LastName}" Grid.Row="2" Grid.Column="1" Grid.RowSpan="2" Margin="0,0,10,20"/>

                <Label Content="Отчество" Grid.Row="3" Grid.Column="0"/>
                <TextBox x:Name="AddMiddleName" Text="{Binding AddPatient.MiddleName}" Grid.Row="3" Grid.Column="1" Grid.RowSpan="2" Margin="0,0,10,20"/>

                <Label Content="День Рождения" Grid.Row="4" Grid.Column="0"/>
                <DatePicker x:Name="AddBirthday" Text="{Binding AddPatient.Birthday}" Grid.Row="4" VerticalAlignment="Center" Grid.Column="1" Margin="0,0,10,0" Height="26"/>


                <Button Content="Добавить пациента" Margin="0,15,10,0" Grid.Row="5" Grid.Column="1" Click="Button_Add_User"/>
            </Grid>
        </Border>




        <Border Background="White" HorizontalAlignment="Center" BorderBrush="Gainsboro" BorderThickness="1"  Margin="0,20,0,0" Grid.Row="1" Grid.Column="2">
            <Grid Grid.Column="2" HorizontalAlignment="Left" Margin="0,20,0,0" Grid.Row="3" Grid.RowSpan="2" Width="282">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Content="Форма изменения информации о клиенте" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" FontWeight="Bold"/>

                <Label Content="Фамилия" Grid.Row="2" Grid.Column="0"/>
                <TextBox  x:Name="Name" Text="{Binding ChangePatients.Name, UpdateSourceTrigger=PropertyChanged}" Width="140" HorizontalAlignment="Right" Margin="0,0,0,20" Grid.Row="2" Grid.RowSpan="2" Grid.ColumnSpan="2"/>

                <Label Content="Имя" Grid.Row="3" Grid.Column="0"/>
                <TextBox  x:Name="LastName" Text="{Binding ChangePatients.LastName, UpdateSourceTrigger=PropertyChanged}" Width="140" HorizontalAlignment="Right" Margin="0,0,0,20" Grid.Row="3" Grid.RowSpan="2" Grid.ColumnSpan="2"/>

                <Label Content="Отчество" Grid.Row="4" Grid.Column="0"/>
                <TextBox  x:Name="MiddleName" Text="{Binding ChangePatients.MiddleName, UpdateSourceTrigger=PropertyChanged}" Width="140" HorizontalAlignment="Right" Margin="0,0,0,20" Grid.Row="4" Grid.RowSpan="2" Grid.ColumnSpan="2"/>

                <Label Content="День Рождение:" Grid.Row="5" Grid.Column="0"/>
                <DatePicker x:Name="Birthday" Text="{Binding ChangePatients.Birthday, UpdateSourceTrigger=PropertyChanged}" Width="140" HorizontalAlignment="Right" Margin="0,0,0,20" Grid.Row="5" VerticalAlignment="Center" Height="26" Grid.ColumnSpan="2"/>

                <Button Content="Изменить информацию" Margin="0,10,0,20" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Left" Width="152" Click="Button_Change_Patient"/>
                <Button Content="Сбросить" Margin="0,10,0,20" Grid.Row="6" HorizontalAlignment="Left" Click="Button_Click_Reset" Width="98"/>
            </Grid>
        </Border>

        <Border Background="White" BorderBrush="Gainsboro" BorderThickness="1" HorizontalAlignment="Center" Margin="0,20,0,2" Grid.RowSpan="3" Grid.ColumnSpan="3">
            <StackPanel HorizontalAlignment="Center" Margin="10,6,0,8" Width="312">

                <TextBlock HorizontalAlignment="Center" Text="Форма приёма пациента:" FontWeight="Bold" Margin="0,0,0,8"/>

                <TextBlock Text="Идентификатор:" Margin="0,6,0,2"/>
                <TextBlock Text="{Binding CurrentPatient.Id}" Margin="0,0,0,6"/>

                <TextBlock Text="Фамилия:" Margin="0,3,0,2"/>
                <TextBlock Text="{Binding CurrentPatient.Name}" Margin="0,0,0,6"/>

                <TextBlock Text="Имя:" Margin="0,3,0,2"/>
                <TextBlock Text="{Binding CurrentPatient.LastName}" Margin="0,0,0,6"/>

                <TextBlock Text="Отчество:" Margin="0,3,0,2"/>
                <TextBlock Text="{Binding CurrentPatient.MiddleName}" Margin="0,0,0,6"/>

                <TextBlock Text="День Рождения:" Margin="0,3,0,2"/>
                <TextBlock Text="{Binding CurrentPatient.Birthday}" Margin="0,0,0,8"/>

                <TextBlock Text="Последний раз:" Margin="0,3,0,2"/>
                <TextBlock Text="{Binding CurrentPatient.LastAppointment}" Margin="0,0,0,8"/>

                <TextBlock Text="Последний Доктор:" Margin="0,6,0,3"/>
                <TextBox Text="{Binding CurrentPatient.LastDoctor,  UpdateSourceTrigger=PropertyChanged}" Width="155" HorizontalAlignment="Left" Margin="0,0,0,8"/>

                <TextBlock Text="Диагноз:" Margin="0,6,0,3"/>
                <TextBox Text="{Binding CurrentPatient.Diagnosis, UpdateSourceTrigger=PropertyChanged}" Width="155" HorizontalAlignment="Left" Margin="0,0,0,8"/>

                <TextBlock Text="Рекомендации:" Margin="0,6,0,3"/>
                <TextBox Text="{Binding CurrentPatient.Recomendations,  UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="52" Width="200" 
                 TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,12"/>

                <Button x:Name="Save" Content="Сохранить" Width="105" Height="25" 
                HorizontalAlignment="Right" Margin="0,6,5,0" Click="Button_Save_Patient"/>

            </StackPanel>
        </Border>
        <TextBox x:Name="SearchUser" HorizontalAlignment="Left" Margin="8,2,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="279" Grid.Column="1"  />
        <Button Grid.Column="1" Content="ПОИСК" HorizontalAlignment="Right" Margin="0,2,3,0" VerticalAlignment="Top" Height="18" Width="45" Click="Button_Search_User"/>
        <StatusBar Grid.Column="0" Grid.Row="3" HorizontalAlignment="Center"  Grid.ColumnSpan="3" Width="1000" Height="40" Margin="10,0,10,10">
            <StatusBarItem Width="195" Margin="20,0,0,0">
                <TextBlock x:Name="status" Text="Готово "/>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock x:Name="qual" Text=""/>
            </StatusBarItem>
        </StatusBar>




    </Grid>
</Window>
